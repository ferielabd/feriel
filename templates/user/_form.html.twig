<section class="shop checkout section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12">
                <div class="checkout-form">
<form class="form" method="post" action="#">
    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>First Name<span>*</span></label>
                {{ form_widget(form.nom,{'attr':{'class':'form-control '}}) }}
                {{ form_errors(form.nom,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>Last Name<span>*</span></label>
                {{ form_widget(form.prenom,{'attr':{'class':'form-control '}}) }}
                {{ form_errors(form.prenom,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>Email Address<span>*</span></label>
                {{ form_widget(form.email,{'attr':{'class':'form-control '}}) }}
                {{ form_errors(form.email,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>Login<span>*</span></label>
                {{ form_widget(form.login,{'attr':{'class':'form-control p-0 border-0'}}) }}
                {{ form_errors(form.login,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>Password<span>*</span></label>
                {{ form_widget(form.mdp,{'attr':{'class':'form-control'}}) }}
                {{ form_errors(form.mdp,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>Country<span>*</span></label>
                {{ form_widget(form.adresse,{'attr':{'class':'form-control '}}) }}
                {{ form_errors(form.adresse,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>

        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>Phone No<span>*</span></label>
                {{ form_widget(form.phone,{'attr':{'class':'form-control '}}) }}
                {{ form_errors(form.phone,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>Date Naissance<span>*</span></label>
                {{ form_widget(form.dateNaiss,{'attr':{'class':'form-control p-0 border-0'}}) }}
                {{ form_errors(form.dateNaiss,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>Sexe<span>*</span></label>
                {{ form_widget(form.sexe,{'attr':{'class':'form-control '}}) }}
                {{ form_errors(form.sexe,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>Role<span>*</span></label>
                {{ form_widget(form.role,{'attr':{'class':'form-control '}}) }}
                {{ form_errors(form.role,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-12">
            <div class="form-group">
                <label>Image<span>*</span></label>
                {{ form_widget(form.image,{'attr':{'class':'form-control '}}) }}
                {{ form_errors(form.image,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-12">
            <div class="form-group create-account">
                <input id="cbox" type="checkbox">
                <label>Create an account?</label>
            </div>
        </div>
    </div>
    <div class="single-widget get-button">
        <div class="content">
            <div class="button">
                {{ form_widget(form) }}
                <button class="btn">{{ button_label|default('Save') }}</button>

            </div>
        </div>
    </div>

    {{ form_end(form) }}

</form>
                </div>
            </div>
        </div>
    </div>
</section>





