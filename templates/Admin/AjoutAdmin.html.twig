{% extends 'baseA.html.twig' %}

{% block body %}

    <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
        <div class="page-title">

            <div class="pull-left">
                <h1 class="title">Ajouter Client </h1>                            </div>

            <div class="pull-right hidden-xs">
                <ol class="breadcrumb">
                    <li>
                        <a href="index.html"><i class="fa fa-home"></i>Menu</a>
                    </li>
                    <li>
                        <a href="eco-customers.html">Clients</a>
                    </li>
                    <li class="active">
                        <strong>Ajouter Client</strong>
                    </li>
                </ol>
            </div>

        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title pull-left">Ajouter Client</h2>
                <div class="actions panel_actions pull-right">
                    <i class="box_toggle fa fa-chevron-down"></i>
                    <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                    <i class="box_close fa fa-times"></i>
                </div>
            </header>
            <div class="content-body">
                <div class="row">

                    <form action ="#" method="post">
                        {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-12">



                            <div class="form-group">

                                <label class="form-label" for="field-1">Nom</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    {{ form_widget(form.nom,{'attr':{'class':'form-control '}}) }}
                                    {{ form_errors(form.nom,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>



                            <div class="form-group">
                                <label class="form-label" for="field-1">Prenom</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    {{ form_widget(form.prenom,{'attr':{'class':'form-control '}}) }}
                                    {{ form_errors(form.prenom,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-1">Email</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    {{ form_widget(form.email,{'attr':{'class':'form-control '}}) }}
                                    {{ form_errors(form.email,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-1">Login</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    {{ form_widget(form.login,{'attr':{'class':'form-control '}}) }}
                                    {{ form_errors(form.login,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-1">Password</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    {{ form_widget(form.mdp,{'attr':{'class':'form-control '}}) }}
                                    {{ form_errors(form.mdp,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="field-6">Addresse</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    {{ form_widget(form.adresse,{'attr':{'class':'form-control '}}) }}
                                    {{ form_errors(form.adresse,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="field-2">Telephone</label>
                                <span class="desc">e.g. "(+216) 26438890 "</span>
                                <div class="controls">
                                    {{ form_widget(form.phone,{'attr':{'class':'form-control '}}) }}
                                    {{ form_errors(form.phone,{'attr':{'class':'form-control'}}) }}


                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Date naissance</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    {{ form_widget(form.dateNaiss,{'attr':{'class':'form-control '}}) }}
                                    {{ form_errors(form.dateNaiss,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Sexe</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    {{ form_widget(form.sexe,{'attr':{'class':'form-control '}}) }}
                                    {{ form_errors(form.sexe,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Image</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    {{ form_widget(form.image,{'attr':{'class':'form-control '}}) }}
                                    {{ form_errors(form.image,{'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>

                        </div>

                        <div class="col-lg-8 col-md-8 col-sm-9 col-xs-12 padding-bottom-30">
                            <div class="text-left">
                                {{ form_widget(form) }}
                                <button class="btn">{{ button_label|default('Save') }}</button>
                                <button type="button" class="btn">Annuler</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </form>

                </div>


            </div>
        </section></div>








{% endblock %}
